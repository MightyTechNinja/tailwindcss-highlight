{
  "name": "tailwindcss-highlight",
  "version": "1.0.0",
  "main": "out/extension.js",
  "license": "MIT",
  "publisher": "ellreka",
  "repository": {
    "type": "git",
    "url": "https://github.com/ellreka/tailwindcss-highlight.git"
  },
  "engines": {
    "vscode": "^1.55.0"
  },
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "title": "tailwindcss highlight",
      "properties": {
        "tailwindcss-highlight.languages": {
          "default": [
            "html",
            "javascript",
            "javascriptreact",
            "typescript",
            "typescriptreact"
          ],
          "title": "language",
          "type": "array"
        },
        "tailwindcss-highlight.utilities": {
          "default": [
            "padding",
            "margin",
            "space",
            "border",
            "width",
            "height"
          ],
          "title": "utilities",
          "type": "array"
        },
        "tailwindcss-highlight.configs": {
          "default": {
            "padding": {
              "regex": "(?<=[:`'\"\\s])(|-)p(|t|b|r|l|x|y)-[^`'\"\\s]+",
              "options": {
                "color": "black",
                "backgroundColor": "#BBC488"
              }
            },
            "margin": {
              "regex": "(?<=[:`'\"\\s])(|-)m(|t|b|r|l|x|y)-[^`'\"\\s]+",
              "options": {
                "color": "black",
                "backgroundColor": "#AD865B"
              }
            },
            "space": {
              "regex": "(?<=[:`'\"\\s])(|-)space-(x|y)-[^`'\"\\s]+",
              "options": {
                "color": "black",
                "backgroundColor": "#AD865B"
              }
            },
            "border": {
              "regex": "(?<=[:`'\"\\s])border(|-)[^`'\"\\s]*",
              "options": {
                "color": "black",
                "backgroundColor": "#DEC38A"
              }
            },
            "width": {
              "regex": "(?<=[:`'\"\\s])(|-)(|max|min)(|-)w-[^`'\"\\s]*",
              "options": {
                "color": "black",
                "backgroundColor": "#a0cade"
              }
            },
            "height": {
              "regex": "(?<=[:`'\"\\s])(|-)(|max|min)(|-)h-[^`'\"\\s]*",
              "options": {
                "color": "black",
                "backgroundColor": "#e6b1a1"
              }
            },
            "flex": {
              "regex": "(?<=[:`'\"\\s])flex(|-)[^`'\"\\s]*",
              "options": {
                "color": "black",
                "backgroundColor": "#EF9A9A"
              }
            },
            "grid": {
              "regex": "(?<=[:`'\"\\s])grid(|-)[^`'\"\\s]*",
              "options": {
                "color": "black",
                "backgroundColor": "#B39DDB"
              }
            }
          },
          "title": "configs",
          "type": "object"
        }
      }
    }
  },
  "scripts": {
    "dev": "tsc -watch -p ./",
    "package": "vsce package",
    "vscode:prepublish": "tsc -p ./",
    "test": "jest"
  },
  "devDependencies": {
    "@ellreka/configs": "1.1.12",
    "@types/jest": "^26.0.23",
    "@types/node": "15.0.2",
    "@types/vscode": "1.55.0",
    "eslint": "7.25.0",
    "jest": "^26.6.3",
    "prettier": "2.2.1",
    "ts-jest": "^26.5.6",
    "typescript": "4.2.4",
    "vsce": "1.88.0"
  }
}
